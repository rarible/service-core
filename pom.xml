            <dependency>
                <groupId>com.batch.escalog</groupId>
                <artifactId>escalog</artifactId>
                <version>${escalog.version}</version>
            </dependency>
            <dependency>
                <groupId>ch.qos.logback.contrib</groupId>
                <artifactId>logback-jackson</artifactId>
