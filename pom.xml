            <dependency>
                <groupId>com.rarible.core</groupId>
                <artifactId>rarible-core-apm-starter</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.rarible.core</groupId>
                <artifactId>rarible-core-meta-resource</artifactId>
                <version>${project.version}</version>
